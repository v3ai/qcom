#!/bin/bash

#current dir you're in
wdir=$(pwd)

#default msg
msg="qcom"

execute () {

	if test -d ./.git; then
	
	  	git add .
		git commit -m "$msg"
	  	git push
	  	
	else
		git init
		read -p "Enter Repo To Push To: " url
	
		while [ -z "$url"];
		do
			read -p "Enter Repo To Push To: " url
		done
		
		git remote add origin $url
		
	  	git add .
		git commit -m "$msg"	
	  	git push --set-upstream origin master
	fi	
}

#check for flags

while :; do
  while getopts "m:" arg; do
    case $arg in
      m)
      	if [ $# == 3 ]; then
			cd $1
			if [ $? == 1 ]; then
				echo "cd to directory failed"
				exit 1
			fi
			execute
			cd $wdir
			exit 0
      	fi
      	msg=$OPTARG
      	execute
      	exit 0
        ;;
      *)
        echo Unknown option: $OPTARG.
        ;;
    esac
  done
  ((OPTIND++)) 
  [ $OPTIND -gt $# ] && break
done



if [ $# == 1 ]; then
	cd $1
	execute
	cd $wdir
	exit 0
elif [ $# == 0 ]; then
	execute
	exit 0
fi
