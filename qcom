#!/bin/bash
echo $#
#current dir you're in
wdir=$(pwd)

#default msg
msg="qcom"

execute () {

	if test -d ./.git; then
	
	  	git add .
		git commit -m "$msg"
	  	git push
	  	
	else
		git init
		read -p "Enter Repo To Push To: " url
	
		while [ -z "$url"];
		do
			read -p "Enter Repo To Push To: " url
		done
		
		git remote add origin $url
		
	  	git add .
		git commit -m "$msg"	
	  	git push --set-upstream origin master
	fi	
}


if [ $# == 0 ]; then
	execute
	exit 1
elif [ $# == 1 ]; then
	cd $1
	execute
	cd $wdir
	exit 1
fi


