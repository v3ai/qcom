#!/bin/bash

wdir=$(pwd)

msg="qcap"

while getopts ":m:" opt; do
  case $opt in
     m)
       msg="$OPTARG"
       ;;
     *)
       echo "Usage: qcap [optional directory] [optional flag -m msg]"
       exit 1
       ;;
  esac
done

# Possibilities

#qcap 
#qcap dir
#qcap -m
#qcap -m "test"
#qcap dir -m
#qcap dir -m "test"



if [ $# == 1 ] && [ $msg == "qcap" ]; then
	cd $1
fi

if [ $# == 2 ] && [ $msg == "" ]; then
	cd $1
fi

if [ $# == 3 ]; then
	cd $1
fi



if test -d ./.git; then

  	git add .
	git commit -m "$msg"
  	git push
  	
else
	git init
	read -p "Enter Repo To Push To: " url

	while [ -z "$url"];
	do
		read -p "Enter Repo To Push To: " url
	done
	
	git remote add origin $url
	
  	git add .
	git commit -m "$msg"	
  	git push --set-upstream origin master
fi

cd $wdir
