#!/bin/bash

wdir=$(pwd)

msg="qcap"

while getopts ":m:" opt; do
  case $opt in
     m)
       msg="$OPTARG"
       ;;
     *)
       echo "Usage: qcap [optional directory] [optional flag -m ]"
       ;;
  esac
done




if [ -n "$1" ]; then
	cd $1
fi

if test -d ./.git; then

  	git add .
	git commit -m "$msg"
  	git push
  	
else
	git init
	read -p "Enter Repo To Push To: " url

	while [ -z "$url"];
	do
		read -p "Enter Repo To Push To: " url
	done
	
	git remote add origin $url
  	git add .
  	
  	read -p "Enter commit message, or leave blank: " msg

	if [ -z "$msg" ];  then
	  	    git commit -m "quick"
	  	else
	  	    git commit -m "$msg"
	  	fi
  	
  	git push --set-upstream origin master
fi

cd $wdir
