#!/bin/bash

wdir=$(pwd)

msg="qcap"

while getopts ":m:d:" opt; do
  case $opt in
     m)
       msg="$OPTARG"
       ;;
     *)
       echo "Usage: qcap [optional directory] [optional flag -m msg]"
       exit 1
       ;;
  esac
done



if test -d ./.git; then

  	git add .
	git commit -m "$msg"
  	git push
  	
else
	git init
	read -p "Enter Repo To Push To: " url

	while [ -z "$url"];
	do
		read -p "Enter Repo To Push To: " url
	done
	
	git remote add origin $url
	
  	git add .
	git commit -m "$msg"	
  	git push --set-upstream origin master
fi

cd $wdir
